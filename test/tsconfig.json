{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": false,
    "baseUrl": "../types",
    "suppressImplicitAnyIndexErrors": true
  },
  "all": true,
  "exclude": [ "node_modules", "dist" ]
}
